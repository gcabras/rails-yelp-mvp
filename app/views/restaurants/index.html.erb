<h1 class="text-center">Welcome to Yelp MVP</h1>
<div container>
  <div class="row justify-content-md-center">
    <ul class="list-group">
    <%@restaurants.each do |restaurant|%>
      <li>
        <div class="list-group-item d-flex justify-content-between">
          <h2><%=restaurant.name%></h2><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
        </div>
      </li>
    <%end%>
    </ul>
  </div>
</div>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-lg-2">
      <%=link_to "Create a new restaurant", new_restaurant_path, class: "btn btn-primary"%>
    </div>
  </div>
</div>
